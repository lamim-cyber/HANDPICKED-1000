 
int main()
{
    test
    {
       string s;
       cin>> s;
       int zero=0, one=0;
       for(int i=0; i<s.size(); i++)
       {
           if(s[i]=='0')
            zero++;
           else
            one++;
       }
        int n= s.size();
       for(int i=0; i<s.size(); i++)
       {
           if(s[i]=='1')
           {
               if(zero>0)
                zero--;
               else
               {
                   n=i;
                   break;
               }
           }else
           {
              if(one>0)
                one--;
               else
               {
                   n=i;
                   break;
               }
           }
       }
 
       cout<< s.size()-n<< endl;
    }
}
